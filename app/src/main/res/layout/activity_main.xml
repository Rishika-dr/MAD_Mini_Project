<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:accessibilityHeading="false"
        android:accessibilityLiveRegion="none"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:outlineAmbientShadowColor="#010417"
        android:outlineSpotShadowColor="#BE3F59B5"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/bus111" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/amarante"
        android:text="Bus Information System"
        android:textColor="#171C2C"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.606"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />


    <Button

        android:id="@+id/student"
        android:layout_width="150dp"
        android:layout_height="95dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#B0ED7001"
        android:drawableLeft="@drawable/student"
        android:fontFamily="@font/bubblegum_sans"
        android:text="Student"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#B6FAFA"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin"
        app:layout_constraintVertical_bias="0.164" />

    <Button
        android:id="@+id/faculty"
        android:layout_width="150dp"
        android:layout_height="95dp"
        android:backgroundTint="#B0ED7001"
        android:drawableLeft="@drawable/student"
        android:ellipsize="none"
        android:filterTouchesWhenObscured="true"
        android:fontFamily="@font/bubblegum_sans"
        android:text="Faculty"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#E1B8DDD5"
        app:layout_constraintBottom_toTopOf="@+id/imageView6"
        app:layout_constraintEnd_toStartOf="@+id/student"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/admin"
        app:layout_constraintVertical_bias="0.161" />

    <Button
        android:id="@+id/admin"
        android:layout_width="150dp"
        android:layout_height="95dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#AD163CC3"
        android:drawableLeft="@drawable/student"
        android:fontFamily="@font/bubblegum_sans"
        android:text="Admin"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#E1B8DDD5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="75dp"
        android:layout_height="71dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.034"
        app:srcCompat="@drawable/logo" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="284dp"
        android:layout_height="26dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="times new roman"
        android:text="Mangalore Institute of Technology"
        android:textColor="#004798"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView7" />

    <TextView
